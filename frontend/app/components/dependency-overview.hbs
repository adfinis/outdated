{{#each @dependencies as |dependency|}}
  <UkCard as |card|>
    <card.header>
      <card.title>{{dependency.name}}</card.title>
      <LinkTo @route='manage.dependency.edit' @model='{{dependency.id}}'>
        <UkButton @color='primary' @label='Edit' />
      </LinkTo>
      <UkButton
        class='uk-button-danger uk-float-right'
        @label='Delete'
        {{on 'click' (fn this.delete dependency.id)}}
      />
    </card.header>
  </UkCard>
{{/each}}