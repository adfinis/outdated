<@selectComponent
  @searchEnabled={{true}}
  @options={{@options}}
  @selected={{@value}}
  @onChange={{this.onUpdate}}
  @onBlur={{@setDirty}}
  @searchField={{@searchField}}
  @placeholder={{@placeholder}}
  id={{@inputId}}
  class='{{if @isValid "is-valid "}} {{if @isInvalid "is-invalid"}}'
  as |name|
>
  {{name}}
</@selectComponent>