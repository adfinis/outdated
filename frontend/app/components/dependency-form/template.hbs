<div style='width: 500px; margin:1rem'>
  <form class='form' {{on 'submit' this.save}}>
    <fieldset class='uk-fieldset'>

      <legend>Dependency</legend>

      <label for='name'>Name:</label>
      <Input
        id='name'
        @type='text'
        @placeholder='Dependency name'
        @value='{{this.name}}'
        {{on 'change' this.update}}
      />

    </fieldset>
    <UkButton @color='primary' @type='submit'>Create</UkButton>
  </form></div>