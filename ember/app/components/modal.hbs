<UkModal
  @visible={{@visible}}
  @bgClose={{false}}
  @escClose={{false}}
  @btnClose={{false}}
  @stack={{true}}
  as |modal|
>
  <modal.header>
    <h2 class='uk-modal-title'>{{@title}}</h2>
  </modal.header>
  {{#if @visible}}
    {{yield
      (hash
        body=(component 'uk-modal/body') footer=(component 'uk-modal/footer')
      )
    }}
  {{/if}}
</UkModal>